{
  "name": "require-watch",
  "version": "1.0.2",
  "description": "Automatically refresh require dependencies in NodeJS",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/*",
    "compile": "rm -rf dist/; babel --plugins transform-runtime,add-module-exports -d dist/ src/",
    "prepublish": "npm test && npm run compile",
    "test": "npm run lint"
  },
  "author": "Benjamin Goh &lt;masotime@gmail.com&gt;",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-module-resolver": "^2",
    "babel-preset-es2015": "^6",
    "babel-preset-stage-0": "^6",
    "babel-runtime": "^6",
    "chokidar": "^1.6.1"
  },
  "devDependencies": {
    "babel-eslint": "^7",
    "babel-plugin-add-module-exports": "^0",
    "babel-plugin-transform-runtime": "^6",
    "eslint": "^3",
    "eslint-import-resolver-babel-module": "^2",
    "eslint-plugin-import": "^2"
  }
}
